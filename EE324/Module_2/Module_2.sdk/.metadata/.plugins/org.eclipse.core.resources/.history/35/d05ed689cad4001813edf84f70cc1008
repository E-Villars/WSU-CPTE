#include "xil_types.h"


// Macro to access the base address of your LED controller
//#define LED *((uint32_t *)0x4BB00000)

int main()
{
    int i = 0;
    uint32_t * LED = (uint32_t*)0x4BB00000;
    // Turn off all LEDs
    LED = 0x00;
    int v_Count = 0;
    // Infinite loop
    while (1) {
    	if(v_Count == 16)
    	{
    		v_Count = 0;
    	}
        // invert the LED value
	LED[1] = v_Count;

        // Delay
        for (i = 0; i < 100000000; i++);
    }
    return 1;
}
